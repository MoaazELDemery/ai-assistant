{
  "expo": {
    "name": "NEXUS AI",
    "slug": "nexus-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.jpg",
    "scheme": "nexus-ai",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/logo.jpg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.Demery.AIAssistant",
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app requires microphone access for voice commands and speech recognition.",
        "NSSpeechRecognitionUsageDescription": "This app uses speech recognition for voice commands.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true,
          "NSAllowsLocalNetworking": true,
          "NSExceptionDomains": {
            "ngrok-free.dev": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "ngrok.io": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSIncludesSubdomains": true
            },
            "localhost": {
              "NSExceptionAllowsInsecureHTTPLoads": true
            },
            "159.89.8.87": {
              "NSExceptionAllowsInsecureHTTPLoads": true,
              "NSTemporaryExceptionMinimumTLSVersion": "TLSv1.0",
              "NSTemporaryExceptionRequiresForwardSecrecy": false
            }
          }
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.jpg",
        "backgroundColor": "#ffffff"
      },
      "package": "com.demery.aiassistant",
      "usesCleartextTraffic": true
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow AI Assistant to access your microphone for voice commands."
        }
      ]
    ]
  }
}